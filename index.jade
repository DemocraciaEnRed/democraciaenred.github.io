      a.dot-write.dot(data-content="Soluciones brindadas por ciudadanos y representantes para cada problématica se debaten entre todos.", data-placement="left", data-title="Crear problématica", data-toggle="popover", href="")
      a.dot-profile.dot(data-content="Se unifica la identidad virtual con la legal de todo ciudadano y luego se verifica entre pares.", data-placement="left", data-title="Perfil de usuario", data-toggle="popover", href="")
      a.dot-problematica.dot(data-content="El planteo de un problema ciudadano se delimita por tiempo y región, y todos pueden contribuir con fuentes y datos.", data-placement="right", data-title="Problematica", data-toggle="popover", href="")
      a.dot-delegar.dot(data-content="Toda propuesta se puede votar directamente o delegar el voto a alguien de confianza.", data-placement="left", data-title="Delegaciones", data-toggle="popover", href="")

