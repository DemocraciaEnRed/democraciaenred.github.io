section.section.proyectos
  background #fff
  background-size 110%
  min-height 400px

  .proyectos-content
    display flex
    flex-flow row wrap
    justify-content center

    .proyectos-item
      position relative
      min-width 250px
      max-width 300px
      padding 1px 1px

    .description-overlay
      opacity 0
      z-index 10
      position fixed
      top 0px
      left 0px
      padding-top 60px
      width 100%
      height 100%
      transition all 0.4s ease
      background-color red
      visibility hidden

      &.show
        opacity 1
        visibility visible

      &.close
        float right
