section.section.proyectos
  background #fff
  background-size 110%
  min-height 400px

  .proyectos-content
    display flex
    flex-flow row wrap
    justify-content center

    .proyectos-item
      position relative
      min-width 250px
      max-width 300px
      padding 1px 1px

  .projects
    text-align center

    .project-card
      height 200px
      transition all 0.4s ease

      .description-overlay
        position absolute
        top auto
        left 0
        min-width 100%
        height 0
        background-color red
        overflow hidden
        transition all 0.4s ease

        .close
          float right
          font-size 40px

      &.expanded
        height 460px

        .description-overlay
          height 200px
