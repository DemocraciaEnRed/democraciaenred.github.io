section.who-we-are
  padding 80px 0 0 !important
  background-color bg-color-2

  .section-title
    padding 0 50px
    margin-bottom 0px
    width auto

    h2
      margin-bottom 0
      color rgba(#000, .8)

    .description
      width 100%
      float left
      text-align center
      margin 0
      line-height 2
      color rgba(#000, .8)

      &.left
        margin-right 4%

section.team
  padding-top 50px !important
  background-color bg-color-2

  .team-avatars
    display flex
    flex-flow row wrap
    justify-content center

  .avatar
    position relative
    width 270px
    height 385px
    margin 0 20px 40px
    border-radius 2px
    box-sizing border-box
    overflow hidden

    .picture
      position relative
      border-radius 3px 3px 0 0
      background-size cover
      background-position center center

      &:after
        content ''
        display block
        padding-top 100%

    .content
      position absolute
      bottom 0
      padding 10px 15px
      width 100%
      height 125px
      background-color white
      transition all default-duration ease
      box-sizing border-box

    .role
      line-height 1

    .bio
      opacity 0
      visibility hidden
      transition opacity default-duration ease

    .social
      position absolute
      bottom 9px
      margin-left -5px

      .flaticon-twitter
        &:hover
          color #63AEEB
      .flaticon-facebook
        &:hover
          color #3B5B93
      .flaticon-github
        &:hover
          color #333333
      .flaticon-linkedin
        &:hover
          color #2679B2

      a
        color darkgrey
        &:hover
          color black
          text-decoration none
        span
          position relative
          font-size 22px
          margin-left 0px

    &:hover
      .content
        height 100%

      .bio
        opacity 1
        visibility visible

  .members
    a
      width 10%
      float left
      display block
      opacity 0.8
      -webkit-transition opacity default-duration

    a
      &:hover
        opacity 1

      img
        width 100%
        height auto
        display block

  .join-the-team
    text-align center
    font-size 20px
    padding 20px 20px 5px 20px
    margin-top 100px

    .btn
      &.btn-join
        display inline-block
        border-color #54c2b6
        background-color #54c2b6
        background none
        color #54c2b6
        margin-left 30px
        line-height 20px
        margin-top -5px

        &:hover
          background-color #54c2b6
          color #fff

  .modal
    width 500px

    .modal-header
      margin-bottom 20px

  .thanks-message
    padding 20px

  .btn-sumate-ahora
    margin-top 20px
